<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp" android:background="@color/off_white"
    android:padding="6dp" android:id="@+id/CardLayout">

    <TextView
        android:id="@+id/rss"
        android:layout_width="match_parent"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="16sp"
        android:textColor="@color/fond_material_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" android:text="Card Rss"
        android:gravity="center_vertical"
        android:paddingTop="8dp" android:paddingBottom="8dp" android:typeface="serif" android:paddingLeft="16dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>